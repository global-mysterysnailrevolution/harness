[Unit]
Description=Harness Setup Trigger (cron + API)
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/harness
ExecStart=/usr/bin/python3 /opt/harness/scripts/vps/setup_trigger_server.py --port 8003 --host 0.0.0.0
Restart=on-failure
RestartSec=10
Environment=HARNESS_DIR=/opt/harness

[Install]
WantedBy=multi-user.target
