{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://contextforge.dev/schemas/skill-pack.schema.json",
  "title": "ContextForge Skill Pack",
  "description": "Schema for generated skill packs. Every generated SKILL.md folder must include a manifest matching this schema.",
  "type": "object",
  "required": ["id", "name", "version", "provenance", "description", "triggers", "skill_file"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$",
      "description": "Unique skill identifier (kebab-case, 2-64 chars)",
      "minLength": 2,
      "maxLength": 64
    },
    "name": {
      "type": "string",
      "description": "Human-readable skill name",
      "maxLength": 128
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of this skill pack"
    },
    "description": {
      "type": "string",
      "description": "One-paragraph description of what this skill does and when to use it",
      "maxLength": 500
    },
    "provenance": {
      "type": "object",
      "required": ["generator", "generator_version", "generated_at", "source_commit"],
      "properties": {
        "generator": {
          "type": "string",
          "const": "contextforge",
          "description": "Always 'contextforge'"
        },
        "generator_version": {
          "type": "string",
          "description": "Version of ContextForge that generated this skill"
        },
        "generated_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of generation"
        },
        "source_commit": {
          "type": "string",
          "pattern": "^[0-9a-f]{7,40}$",
          "description": "Git commit hash of the source repo at generation time"
        },
        "source_repo": {
          "type": "string",
          "description": "Repository URL or path that was analyzed"
        },
        "analysis_hash": {
          "type": "string",
          "description": "SHA-256 of the analysis result used to generate this skill. Enables idempotence verification."
        }
      },
      "additionalProperties": false
    },
    "triggers": {
      "type": "object",
      "description": "When this skill should be activated",
      "properties": {
        "file_patterns": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Glob patterns that trigger this skill (e.g. '*.py', 'Dockerfile')"
        },
        "keywords": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Keywords in user prompts that should activate this skill"
        },
        "slash_command": {
          "type": "string",
          "pattern": "^/[a-z][a-z0-9-]*$",
          "description": "Explicit slash command to invoke (e.g. '/test-runner')"
        },
        "auto_load": {
          "type": "boolean",
          "default": false,
          "description": "If true, always loaded in context. Use sparingly."
        }
      },
      "additionalProperties": false
    },
    "skill_file": {
      "type": "string",
      "default": "SKILL.md",
      "description": "Path to the main skill markdown file relative to skill directory"
    },
    "scripts": {
      "type": "array",
      "description": "Supporting scripts bundled with this skill",
      "items": {
        "type": "object",
        "required": ["path", "description", "runtime"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Relative path to script within skill directory"
          },
          "description": {
            "type": "string"
          },
          "runtime": {
            "type": "string",
            "enum": ["python3", "node", "bash", "powershell"],
            "description": "Required runtime"
          },
          "deterministic": {
            "type": "boolean",
            "default": true,
            "description": "If true, script produces deterministic output (no LLM calls)"
          }
        },
        "additionalProperties": false
      }
    },
    "dependencies": {
      "type": "object",
      "description": "External dependencies required by this skill",
      "properties": {
        "tools": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Tool names or groups this skill needs (e.g. 'exec', 'browser', 'group:fs')"
        },
        "packages": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "manager"],
            "properties": {
              "name": { "type": "string" },
              "version": { "type": "string" },
              "manager": {
                "type": "string",
                "enum": ["npm", "pip", "apt", "brew"]
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "security": {
      "type": "object",
      "description": "Security classification for this skill",
      "properties": {
        "action_classes": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["read", "write", "network", "exec", "credential"]
          },
          "description": "Action classes this skill may perform"
        },
        "requires_approval": {
          "type": "boolean",
          "default": false,
          "description": "If true, skill invocation requires human approval"
        },
        "secrets_access": {
          "type": "boolean",
          "default": false,
          "description": "If true, skill may access secret stores (never memory/logs)"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Categorization tags (e.g. 'testing', 'deployment', 'security')"
    }
  },
  "additionalProperties": false
}
