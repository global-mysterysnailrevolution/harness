{
  "version": "1.0",
  "description": "MCP stdio-to-HTTP bridges for OpenClaw. Add entries here; config watcher starts them.",
  "bridges": {
    "filesystem": {
      "port": 8101,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${HARNESS_DIR}/ai"],
      "enabled": true
    },
    "everything": {
      "port": 8102,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-everything"],
      "enabled": true
    },
    "memory": {
      "port": 8104,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "enabled": true
    },
    "github": {
      "port": 8103,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "enabled": false,
      "note": "Set GITHUB_PERSONAL_ACCESS_TOKEN to enable"
    },
    "codex": {
      "port": 8105,
      "command": "codex",
      "args": ["mcp-server"],
      "enabled": true,
      "note": "Codex CLI MCP server - provides gpt-5.3-codex access"
    },
    "hlos": {
      "port": 8106,
      "command": "npx",
      "args": ["-y", "@hlos/staamp-mcp"],
      "env": {
        "HLOS_API_URL": "https://api.hlos.ai"
      },
      "enabled": true,
      "note": "HLOS STAAMP MCP - agent identity, wallet, credential provisioning. Run 'hlos login' on host first."
    }
  }
}
